        <StackLayout>
            <Label
                Margin="20,10,0,0"
                FontSize="28"
                Text="Music List"
                TextColor="White" />
            <ListView
                HasUnevenRows="True"
                ItemsSource="{Binding MusixList}"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="15,5">
                                <Frame BackgroundColor="#1A1A1A">
                                    <StackLayout Orientation="Horizontal">
                                        <Image HorizontalOptions="Start" Source="trash.png">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer CommandParameter="{Binding Id}" Tapped="TapGestureRecognizer_Tapped" />
                                            </Image.GestureRecognizers>
                                        </Image>
                                        <StackLayout VerticalOptions="Center">
                                            <Label
                                                Margin="30,0,0,0"
                                                FontSize="17"
                                                Text="{Binding Title}"
                                                TextColor="White"
                                                VerticalOptions="Center" />
                                            <Label
                                                Margin="30,0,0,0"
                                                FontSize="17"
                                                Text="{Binding Artist}"
                                                TextColor="#797979"
                                                VerticalOptions="Center" />
                                        </StackLayout>
                                        <StackLayout HorizontalOptions="EndAndExpand" VerticalOptions="Center">
                                            <pv:PancakeView
                                                BackgroundColor="White"
                                                CornerRadius="20"
                                                HeightRequest="40"
                                                HorizontalOptions="End"
                                                VerticalOptions="Center"
                                                WidthRequest="40">
                                                <Image
                                                    HeightRequest="12"
                                                    HorizontalOptions="Center"
                                                    Source="playBlack.png"
                                                    VerticalOptions="Center"
                                                    WidthRequest="10" />
                                            </pv:PancakeView>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>

    </ContentPage.Content>
